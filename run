#!/usr/bin/env bash

if [ $# != 1 ]
then
    echo "ERROR: Incorrect usage"
    echo "USAGE:"
    echo -e "\t./run build"
    echo -e "\t./run install"
    echo -e "\t./run test"
    echo -e "\t./run <URL_FILE>"
elif [ $1 == "help" -o $1 == "--help" -o $1 == "-h" ]
then
    echo "USAGE:"
    echo -e "\t./run build"
    echo -e "\t./run install"
    echo -e "\t./run test"
    echo -e "\t./run <URL_FILE>"
elif [ $1 == "install" ]
then
    make install
elif [ $1 == "build" ]
then
    cargo build --release
elif [ $1 == "test" ]
then
    cargo build
else
    cargo run -- $1
fi